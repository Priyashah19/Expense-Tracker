@model task.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:#4E1A3D;text-align:center;font-family: fantasy;margin-top:15px"><i>Create</i></h1>

<h4 style="color:#4E1A3D;text-align:center;font-family: fantasy;margin-top:15px"><i>>Category</i></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b style="color:#4E1A3D">
                    <label asp-for="Category_Name" class="control-label"></label><br />
                    <input asp-for="Category_Name" class="form-control" /><hr />
                <span asp-validation-for="Category_Name" class="text-danger"></span>
                </b>
            </div>
            <div class="form-group">
                <b style="color:#4E1A3D">
                    <label asp-for="Category_Limit" class="control-label"></label><br />
                    <input asp-for="Category_Limit" class="form-control" /><hr />
                <span asp-validation-for="Category_Limit" class="text-danger"></span>
                </b>
            </div>
            <div class="form-group">
                 <b style="color:#4E1A3D">
                    <label asp-for="Category_Description" class="control-label"></label><br />
                    <input asp-for="Category_Description" class="form-control" /><hr />
                <span asp-validation-for="Category_Description" class="text-danger"></span>
                </b>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color:#4E1A3D">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
